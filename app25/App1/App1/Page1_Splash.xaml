             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False"
             x:Class="App1.Page1_Splash">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Image x:Name="logos"  WidthRequest="200" HeightRequest="200" IsVisible="True" Source="appLogo.png"></Image>
