        <Label Text="All Rights Reserved" FontSize="Small" TextColor="Black" HorizontalTextAlignment="Center"></Label>
        <Label Text="Version No 1.1" TextColor="#ea6c57"  HorizontalTextAlignment="Center"></Label>
    </StackLayout>
</ContentPage>